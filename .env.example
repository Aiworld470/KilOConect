# =================================
# KILOCONNECT - ENVIRONMENT VARIABLES
# =================================

# Application Configuration
VITE_APP_NAME=KiloConnect
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000/api

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (SendGrid/Mailgun)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@kiloconnect.com

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,.pdf,.doc,.docx

# Google Maps API (pour g√©olocalisation)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_HOTJAR_ID=your_hotjar_id

# Social Login (optionnel)
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# WebSocket Configuration
VITE_WEBSOCKET_URL=ws://localhost:3001
WEBSOCKET_PORT=3001

# Redis Configuration (pour cache)
REDIS_URL=redis://localhost:6379

# Database Configuration (si pas Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/kiloconnect

# Security
JWT_SECRET=your_super_secret_jwt_key
ENCRYPTION_KEY=your_encryption_key_32_chars

# External APIs
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
SMS_SERVICE_API_KEY=your_sms_service_api_key

# Development
NODE_ENV=development
VITE_DEBUG=true
VITE_MOCK_API=true

# Production
# NODE_ENV=production
# VITE_DEBUG=false
# VITE_MOCK_API=false